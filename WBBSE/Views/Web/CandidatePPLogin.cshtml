@using Common;
@using System.Web.Optimization;
@model ViewModel.VMCandidateLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
