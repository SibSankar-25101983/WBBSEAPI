    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/fontawesome-free/js/fontawesome.min.js"></script>
    <script src="~/js/BasicFunctions.js?v=@DateTime.Now.ToFileTime()"></script>
    <script src="~/js/Message.js?v=@DateTime.Now.ToFileTime()"></script>
    <script src="~/js/Duplicate.js"></script>
    <script src="~/js/jquery-required.js"></script>
    <script src="~/js/loadingoverlay.min.js"></script>
    <script src="~/vendor/jqueryUI/jquery-ui.min.js"></script>
    <script src="~/js/client/cl.js?v=@DateTime.Now.ToFileTime()"></script>
</body>
</html>
