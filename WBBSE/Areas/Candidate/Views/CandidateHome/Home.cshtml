@using Common;

@{
    ViewBag.Title = "WBBSE Candidate :: Home";
    Layout = "~/Areas/Candidate/Views/Shared/_LayoutCandidate.cshtml";
}

@section pageheader
{
    <h1 class="h3 font-weight-bold text-info text-uppercase mb-1 pb-2">Dashboard</h1>
    <hr class="pb-2" />
}

<section class="my-5">
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-md-4" id="divCandidateStatus"></div>
            <div class="col-md-8">
                <ul class="nav nav-pills" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active show" id="pills-candidate-tab" data-toggle="pill" href="#pills-candidate" role="tab" aria-controls="pills-candidate" aria-selected="true">Candidate Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-result-tab" data-toggle="pill" href="#pills-result" role="tab" aria-controls="pills-result" aria-selected="false">Madhyamik Marks</a>
                    </li>
                </ul>
                <div class="tab-content border rounded shadow-sm m-0 p-0" id="pills-tabContent">
                    <div class="tab-pane fade active show" id="pills-candidate" role="tabpanel" aria-labelledby="pills-candidate-tab">
                        <div id="divCandidateData" class="table-responsive">
                            <table class="table table-striped table-hover m-0 p-0">
                                <tbody id="tblCandidateData"></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade m-0 p-0" id="pills-result" role="tabpanel" aria-labelledby="pills-result-tab">
                        <div id="divResultData" class="table-responsive m-0 p-0">
                            <table class="table table-striped m-0 p-0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Subject</th>
                                        <th>Marks</th>
                                        <th>Grade</th>
                                    </tr>
                                </thead>
                                <tbody id="tblResultData"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section scripts
{
    <script src="~/js/loadingoverlay.min.js"></script>
    <script src="~/Areas/Candidate/js/home.js?v=@DateTime.Now.ToFileTime().ToString()"></script>
}
